{
  "include": ["api-shared", "ui-shared", "backend", "frontend"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@shared/api/*": [
        "./api-shared/src/*"
      ],
      "@shared/ui/*": [
        "./ui-shared/src/*"
      ],
    }
  }
}
